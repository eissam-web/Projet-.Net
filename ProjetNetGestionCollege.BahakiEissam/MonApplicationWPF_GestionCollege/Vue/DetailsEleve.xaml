<UserControl x:Class="MonApplicationWPF_GestionCollege.Vue.DetailsEleve"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonApplicationWPF_GestionCollege.Vue"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>

        <Label>Nom de l'éléve</Label>
        <TextBox Text="{Binding Nom}"></TextBox>
        <Label>Prénom de l'éléve</Label>
        <TextBox Text="{Binding Prenom}"></TextBox>
        <Label>Date de naissance de l'éléve</Label>
        <TextBox Text="{Binding DateDeNaissance}"></TextBox>
        <Label>Moyenne l'éléve</Label>
        <TextBlock Text="{Binding Moyenne}"></TextBlock>
        <Label>Nombre d'absence l'éléve</Label>
        <TextBlock Text="{Binding NombreAbsence}"></TextBlock>

    </StackPanel>
    
    
</UserControl>
